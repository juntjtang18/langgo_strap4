{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "topic",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "difficulty_level": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::difficulty-level.difficulty-level",
      "inversedBy": "topics"
    },
    "description": {
      "type": "text"
    },
    "questions": {
      "type": "component",
      "repeatable": true,
      "component": "a.question"
    },
    "tags": {
      "type": "string"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "grammar_point": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::grammar-point.grammar-point",
      "inversedBy": "topics"
    },
    "mode_hint": {
      "type": "enumeration",
      "enum": [
        "auto",
        "practice",
        "scenario"
      ],
      "default": "auto"
    },
    "conversations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::conversation.conversation",
      "mappedBy": "topic"
    },
    "scenarios": {
      "type": "component",
      "repeatable": true,
      "component": "a.scenario"
    },
    "quality_score": {
      "type": "integer"
    },
    "score_breakdown": {
      "type": "json"
    },
    "cefr_syllabus": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cefr-syllabus.cefr-syllabus",
      "inversedBy": "topics"
    },
    "spoken_title": {
      "type": "string"
    }
  }
}
